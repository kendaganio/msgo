<header class="bg-white shadow">
  <div class="container flex justify-between px-4 py-6 mx-auto sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold leading-tight text-gray-800">
      <%= title %>
    </h2>
    <% if local_assigns[:action] %>
      <a href="<%= action[:href] %>" class="self-end px-4 py-2 font-normal text-white bg-blue-500 rounded hover:bg-blue-700">
        <%= action[:text] %>
      </a>
    <% end %>
  </div>
</header>
